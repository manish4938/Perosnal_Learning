<apex:page docType="html-5.0" applyBodyTag="false" applyHtmlTag="false" showHeader="false" standardStylesheets="false">
     <head>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
      </script>
      <script>
         function functionAlert(msg, myYes) {
            var confirmBox = $("#confirm");
            confirmBox.find(".message").text(msg);
            confirmBox.find(".yes").unbind().click(function() 
			{
               confirmBox.hide();
            });
            confirmBox.find(".yes").click(myYes);
            confirmBox.show();
              $("#row-test").hide();
         }
      </script>
      <style>
         #confirm  {
            display: none;
            background-color: ##F5F5F5;
            color: black;
			border-radius: 7px;
			border: 3px solid #e0dedd;
			position: fixed;
			width: 450px;
			height: 120px;
			left: 42%;
			margin-left: -100px;
			padding: 6px 8px 8px;
			box-sizing: border-box;
			text-align: center;
			margin-top: 11.5em;
			border-width:6px 2px 6px 2px;
			font-size:20px;
           
         }
         #confirm button {
            background-color: #b11721;
            display: inline-block;
            border-radius: 5px;
            border: 1px solid #aaa;
            padding: 12px;
            text-align: center;
            width: 80px;
            cursor: pointer;
			color: white;

         }
         #confirm .message  {
            text-align: center;
			
        }
		
      </style>
   </head>
   <body>
   <div id="confirm">
         <div class="message">Password has been reset successfully. </div>
       <br></br>
		 <div>
			<button  class="yes">DONE</button>
		 </div>
      </div>
    <div class="row" id = "row-test"><input type="button" value="Click Me" onclick="functionAlert()" /> </div>
   </body>
</apex:page>